<div class="container">
    <div class="row">
            <div class="col-sm-3">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Character Info</h3>
                    </div>
                    <div class="panel-body">
                        Information about the selected character goes here.
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm btn-default">
                            <span class="glyphicon glyphicon-flag" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm btn-primary">
                            <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm btn-default">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm btn-primary">
                            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm btn-default">
                            <span class="glyphicon glyphicon-screenshot" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm btn-primary">
                            <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm btn-default">
                            <span class="glyphicon glyphicon-tower" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm btn-primary">
                            <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm btn-default">
                            <span class="glyphicon glyphicon-tree-deciduous" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>

            </div>
</div>

        <div class="col-md-9">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">Map of Venture Land</h3>
                    </div>
                    <div class="panel-body">
                        <div id="venture_map">
                        <h4>You are in "{{ name }}"</h4>

Width: {{input value=mapWidth size="3"}}
Height: {{input value=mapHeight size="3"}}

<table style="border: 1px solid gray;">
  {{#each map.rows as |row|}}
    <tr>
      {{#each row.cells as |cell|}}
        <td>{{cell.text}}</td>
      {{/each}}
    </tr>
  {{/each}}
</table>
                        </div>
                    </div>
                </div>
         </div>

         </div>

